//
// The runtime commands referenced by the hotkeys
//
runTimeCommand
	-annotation ""
	-category "Custom Scripts.mmtk.common.transform"
	-hotkeyCtx ""
	-commandLanguage "python"
	-command ("import mmt.common.transform as transform\n\ntransform.reset_scale(cmds.ls(sl=True))")
	reset_scale;

runTimeCommand
	-annotation ""
	-category "Custom Scripts"
	-hotkeyCtx ""
	-commandLanguage "python"
	-command ("import mmtk.rigging.nodeeditor as nodeeditor\nreload(nodeeditor)\n\nnodeeditor.graph_hovered_attribute()")
	GraphAffectedNodes;

runTimeCommand
	-annotation ""
	-category "Custom Scripts"
	-hotkeyCtx ""
	-commandLanguage "mel"
	-command ("charcoalEditor2;")
